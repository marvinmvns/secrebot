  // Carregar dados iniciais
  loadEndpoints();
  checkAudioSupport();
  loadChatHistory();
  updateSessionIndicator(); // Mostrar sessionId se j√° existir
  
  // Recarregar endpoints a cada 30 segundos
  setInterval(loadEndpoints, 30000);
});
